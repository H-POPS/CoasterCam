<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net45</TargetFramework>
    <LangVersion>latest</LangVersion>
    <RootNamespace>CoasterCam</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <!-- Used as AssemblyName -->
    <Identifier>ParkitectNexus@CoasterCam</Identifier>
    <!-- used as AssemblyTitle and AssemblyProduct -->
    <Name>CoasterCam</Name>
    <!-- Used as AssemblyDescription -->
    <Description>Camera for riding coasters</Description>
    <!-- Output folder name in $(ModDir) -->
    <FolderName>$(Identifier)</FolderName>

    <!-- AssemblyCopyright -->
    <Copyright>Copyright Â© ParkitectNexus 2015</Copyright>
    <!-- AssemblyCompany -->
    <Company>ParkitectNexus</Company>

    <!-- If true: execute Parkitect.exe after build. For single build: dotnet build /p:StartParkitect=true -->
    <StartParkitect>false</StartParkitect>
  </PropertyGroup>

  <PropertyGroup>
    <!-- Different on each system -->
    <ParkitectPath>E:\Downloads\games\Humble Bundle\games\Parkitect\Parkitect_Beta_11_64bit</ParkitectPath>
    <ParkitectUserPath>E:\Documents\Parkitect</ParkitectUserPath>
  </PropertyGroup>

